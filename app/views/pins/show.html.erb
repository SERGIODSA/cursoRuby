<div class="row">
	<div class="col-sm-6 col-xs-12 col-sm-offset-3 well">
		<strong>Descripcion:</strong>

		<p><%= image_tag @pin.image %></p>
		<p><%= @pin.description %></p>
		<p><%= @pin.created_at %></p>
		<p>Creado Por:<%= @pin.user.name %></p>
	</div>
</div>
<div class="row">
	<div class="col-xs-12 col-sm-9">
		<% if current_user == @pin.user %>
		<%= link_to 'Editar', edit_pin_path(@pin) %> <% end %> |
		<%= link_to 'Regresar', pins_path %>
	</div>
</div>
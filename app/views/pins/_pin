<div class="box">
	<%= image_tag pin.image(:medium) %>
	<%= pin.description %>
	<%= link_to 'Mostrar', pin %>
		<% if current_user == pin.user %>
		<%= link_to 'Editar', edit_pin_path(pin) %>
		<%= link_to 'Eliminar', pin, method: :delete, data: { confirm: 'Esta seguro de que quiere eliminar?' } %>
		<% end %>
</div>
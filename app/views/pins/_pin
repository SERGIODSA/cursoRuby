    <td><%= link_to 'Editar', edit_pin_path(pin) %></td>
    <td><%= link_to 'Eliminar', pin, method: :delete, data: { confirm: 'Esta seguro de que quiere eliminar?' } %></td>
    <% end %>
</tr>